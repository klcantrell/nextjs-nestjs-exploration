{
  "name": "nestjs-exploration",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "NODE_ENV=production nest build --path src/server/tsconfig.build.json",
    "build:client": "NODE_ENV=production next build src/client && npm run copy-client-build",
    "copy-client-build": "mkdir -p dist/client/.next && mv src/client/.next dist/client && npm run copy-client-public && npm run copy-client-config",
    "copy-client-public": "cp -r src/client/public dist/client",
    "copy-client-config": "cp src/client/next.config.js dist/client",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start --path src/server/tsconfig.json",
    "start:dev": "nest start --path src/server/tsconfig.json --watch",
    "start:debug": "nest start --path src/server/tsconfig.json --debug --watch",
    "start:prod": "NODE_ENV=production node dist/server/main",
    "lint": "eslint src/server --fix --config src/server/.eslintrc.js; eslint src/client --fix --config src/client/.eslintrc.js",
    "test:server": "jest --config src/server/jest.config.ts",
    "test:server:watch": "jest --config src/server/jest.config.ts --watch",
    "test:server:cov": "jest --config src/server/jest.config.ts --coverage",
    "test:server:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config src/server/jest.config.ts",
    "test:server:e2e": "jest --config src/server/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.9.5",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "eslint-config-next": "13.2.4"
  }
}
